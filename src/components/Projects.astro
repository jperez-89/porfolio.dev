---
import GitHub from "./icons/GitHub.astro";
import PHP from "./icons/PHP.astro";
import Bootstrap from "./icons/Bootstrap.astro";
import Link from "./icons/Link.astro";
import LinkButton from "./LinkButton.astro";
import JavaScript from "./icons/JavaScript.astro";
import Laravel from "./icons/Laravel.astro";
import MySQL from "./icons/MySQL.astro";
import jQuery from "./icons/jQuery.astro";

const Tags = {
  PHP: {
    name: "PHP",
    class: "bg-[#4F5B93] text-white",
    icon: PHP,
  },
  Bootstrap: {
    name: "Bootstrap",
    class: "bg-[#712CF9] text-white",
    icon: Bootstrap,
  },
  JavaScript: {
    name: "JavaScript",
    class: "bg-[#f0db4f] text-white",
    icon: JavaScript,
  },
  jQuery: {
    name: "jQuery",
    class: "bg-[#0769AD] text-white",
    icon: jQuery,
  },
  Laravel: {
    name: "Laravel",
    class: "bg-[#F53003] text-white",
    icon: Laravel,
  },
  MySQL: {
    name: "MySQL",
    class: "bg-[#3E6E93] text-white",
    icon: MySQL,
  },
};

const PROJECTS = [
  {
    title: "STKO - Venta de entradas offline para eventos",
    description:
      "Permite la compra de entradas, gestión integral de eventos y control de acceso en tiempo real.",
    link: "http://3.140.163.167/",
    github: "#",
    image: "/projects/stko.webp",
    tags: [Tags.PHP, Tags.JavaScript, Tags.jQuery, Tags.Bootstrap, Tags.MySQL],
  },
  {
    title: "POS - SuperMarket",
    description:
      "Sistema POS para supermercados que permite gestionar ventas, inventario, clientes y proveedores en tiempo real. Incluye control de caja, generación de reportes y soporte para múltiples usuarios. Desarrollado con tecnologías modernas para garantizar rapidez y seguridad en las operaciones diarias.",
    link: "#",
    github: "https://github.com/jperez-89/supermarket",
    image: "/projects/pos.webp",
    tags: [Tags.PHP, Tags.JavaScript, Tags.jQuery, Tags.Bootstrap, Tags.MySQL],
  },
];
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
        <div class="w-full md:w-1/2">
          <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
            <img
              alt="Project image"
              class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
              loading="lazy"
              src={image}
            />
          </div>
        </div>

        <div class="w-full md:w-1/2 md:max-w-lg">
          <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
            {title}
          </h3>
          <div class="flex flex-wrap mt-2">
            <ul class="flex flex-wrap mb-2 gap-x-1">
              {tags.map((tag) => (
                <li>
                  <span
                    class={`flex gap-x-2 m-0.5 rounded-full text-xs ${tag.class} py-1 px-2 `}
                  >
                    <tag.icon class="size-4" />
                    {tag.name}
                  </span>
                </li>
              ))}
            </ul>

            <div class="mt-2 text-gray-700 dark:text-gray-400">
              {description}
            </div>
            <footer class="flex items-end justify-start mt-4 gap-x-4">
              {github && (
                <LinkButton href={github}>
                  <GitHub class="size-6" />
                  Code
                </LinkButton>
              )}
              {link && (
                <LinkButton href={link}>
                  <Link class="size-4" />
                  Preview
                </LinkButton>
              )}
            </footer>
          </div>
        </div>
      </article>
    ))
  }
</div>
